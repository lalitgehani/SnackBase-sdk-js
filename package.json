{
  "name": "snackbase-monorepo",
  "private": true,
  "description": "Monorepo for SnackBase SDK and React integration",
  "scripts": {
    "build": "pnpm -r --filter './packages/{sdk,react}' build",
    "dev": "pnpm -r --parallel --filter './packages/{sdk,react}' dev",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run --project sdk --project react",
    "test:integration": "vitest run --project integration",
    "typecheck": "pnpm -r --filter './packages/**' typecheck",
    "lint": "eslint packages --ext .ts,.tsx",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@vitejs/plugin-react": "^5.1.2",
    "jsdom": "^27.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsdown": "^0.20.0-beta.4",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "vitest": "^1.2.1"
  }
}
